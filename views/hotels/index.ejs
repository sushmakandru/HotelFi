<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To HotelFi</h1>
            <p>View our hand-picked hotels from all over the world</p>
            <a class="btn btn-primary btn-lg" href="/hotels/new">Add New hotel</a>
            <p>
                <form method="GET" action="/hotels" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="hotel Search...." class="form-control">
                        <input type="submit" value="Search" class= "btn btn-default">
                    </div>
                </form>
            </p>
        </div>
    </header>

    <div class="row text-center flex" style="display:flex; flex-wrap:wrap;">
        <% hotels.forEach(function(hotel){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail indeximage">
                    <img src="<%= hotel.image %>">
                    <div class="caption">
                        <h4><%= hotel.name %></h4>
                    </div>
                    <p>
                        <a href="/hotels/<%= hotel._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<% include ../partials/footer %>