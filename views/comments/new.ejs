<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;"> Add new comment to <%= hotel.name %></h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/hotels/<%= hotel._id %>/comments" method="POST">
               <!-- <div class="form-group">
                    <input type="text" class="form-control" name="comment[author]" placeholder="author">
                </div> -->
                <div class="form-group">
                    <label for="text">Comment</label>
                    <input type="text" class="form-control" name="comment[text]" placeholder="text">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/hotels/<%= hotel._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>